@page
@model RazorPageProject.Pages.Admin.Product.IndexModel
@{
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.Price</th>
                    <th>@item.Description</th>
                    <th>
                        <a asp-page = "Delete" asp-route-id = "@item.Id">حذف</a>
                    </th>
                    <th>
                        <a asp-page = "Edit" asp-route-id = "@item.Id">ویرایش</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>